+sezon_type_next(event)
    .content-of-event
        .container
            .row
                .left-col
                    .padding-content-left 
                        .more-padding
                            .image-icon
                                img(src=event.image alt="" class="img-fluid")
                            .content-data 
                                .content-label.label-color Opis:
                                .content-text #{event.longDesc}
                        include ./small-event-gallery.pug


                .right-col
                    .padding-content-right 
                        if(event.eventType=='template' && event.eventType!='organize')
                            .event-title
                                h2.event-title #{event.name}
                            .date-area
                                span.days-count #{event.daysTotal} dni
                                span.date-area-str-muted wybrany przez klienta
                        else
                            .event-title-price        
                                .col-title
                                    h2.event-title #{event.name}
                                .col-price
                                    span.price-span #{eventBase.priceBrutto} 
                                        small.sufix-p z≈Ç/os    
                            .date-area
                                span.days-count #{event.daysTotal} dni
                                +date_area_string(event.startAt,event.endAt,moment)

                        .region-row
                            .region-label
                                | Region:
                            .regions
                                each r in event.regions
                                    span.region-badge #{r.name}
                        .city-row
                            .city-label
                                | Miasta:
                            .cities
                                each r in event.cities
                                    span.city-badge #{r.name}
                        .attraction-row
                            .attraction-label
                                | Atrakcje:
                            .attractions
                                each r in event.attractions
                                    span.attraction-badge #{r.name}
                        .theme-row
                            .theme-label
                                | Tematyka:
                            .themes
                                each r in event.themes
                                    span.theme-badge #{r.name}
            .event-bottom.full-event     
                .catalog-number
                    .number-c
                        span.label-nr numer katalogowy:
                        span.catalog-badge #{event.number}